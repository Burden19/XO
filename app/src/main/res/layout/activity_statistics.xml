<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StatisticsActivity">

    <TextView
        android:id="@+id/tv_win_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/win_streak" />

    <TextView
        android:id="@+id/tv_lose_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lose_streak" />

    <TextView
        android:id="@+id/tv_win_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/win_percentage" />

    <TextView
        android:id="@+id/tv_total_tournaments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_tournaments" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
